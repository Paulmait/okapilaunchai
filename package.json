{
  "name": "okapilaunch-ai",
  "private": true,
  "packageManager": "pnpm@8.12.0",
  "scripts": {
    "dev": "pnpm --filter @okapilaunch/web dev",
    "dev:all": "pnpm -r --parallel dev",
    "dev:web": "pnpm --filter @okapilaunch/web dev",
    "dev:worker": "pnpm --filter @okapilaunch/worker dev",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter @okapilaunch/web build",
    "build:worker": "pnpm --filter @okapilaunch/worker build",
    "start": "pnpm run --parallel start:web start:worker",
    "start:web": "pnpm --filter @okapilaunch/web start",
    "start:worker": "pnpm --filter @okapilaunch/worker start",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test:e2e": "node --experimental-strip-types scripts/e2e.ts",
    "clean": "pnpm -r exec -- rm -rf dist node_modules/.cache",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "adm-zip": "^0.5.16",
    "pg": "^8.16.3",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3"
  }
}
